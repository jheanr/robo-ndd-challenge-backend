{
  "openapi": "3.0.0",
  "info": {
    "title": "[R.O.B.O] Documentation",
    "description": "This is an API for [R.O.B.O] challenge.",
    "version": "1.0.0",
    "contact": {
      "name": "Jhean Ramos",
      "email": "jheanr@gmail.com"
    }
  },
  "paths": {
    "/head": {
      "patch": {
        "tags": ["Head"],
        "summary": "Move head",
        "description": "Update the head position to a new one. By default, both head positions(<em>inclination, rotation</em>) starts in <code>em repouso</code>. Each movement must move to the next or previous action position, so if the current <code>inclination</code> position is <code>para cima</code>, you're unable to move to <code>para baixo</code> in one request. See <code>schema</code> for details.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "action": {
                    "type": "string",
                    "enum": ["inclination", "rotation"]
                  },
                  "movement": {
                    "type": "number",
                    "description": "Acceptable values(number only): <pre>For <em>inclination</em> values: <ul><li>1 (para cima)</li><li>2 (em repouso)</li><li>3 (para baixo)</li></ul></pre><pre>For <em>rotation</em> values:<ul><li>1 (rotação -90°)</li><li>2 (rotação -45°)</li><li>3 (em repouso)</li><li>4 (rotação 45°)</li><li>5 (rotação 90°)</li></ul></pre>"
                  }
                }
              },
              "example": {
                "action": "inclination",
                "movement": 1
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Head moved."
          },
          "400": {
            "description": "Invalid head movement.",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [{
                    "type": "object",
                    "properties": {
                      "status": {
                        "type": "string"
                      },
                      "message": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "status": "error",
                      "message": "Invalid head movement."
                    }
                  }, {
                    "type": "object",
                    "properties": {
                      "status": {
                        "type": "string"
                      },
                      "message": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "status": "error",
                      "message": "You can't rotate the head with the current inclination position."
                    }
                  }]
                }
              }
            }
          },
          "500": {
            "description": "Internal server error.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "status": "error",
                    "message": "Internal server error."
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Head"],
        "summary": "List head positions.",
        "description": "List head positions(<em>inclination, rotation</em>) values.",
        "responses": {
          "200": {
            "description": "Success.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "inclination": {
                      "type": "string"
                    },
                    "inclination_position": {
                      "type": "number"
                    },
                    "rotation": {
                      "type": "string"
                    },
                    "rotation_position": {
                      "type": "number"
                    }
                  }
                },
                "example": {
                  "inclination": "Em Repouso",
                  "inclination_position": 2,
                  "rotation": "Em Repouso",
                  "rotation_position": 3
                }
              }
            }
          }
        }
      }
    },
    "/arms": {
      "patch": {
        "tags": ["Arms"],
        "summary": "Move arm",
        "description": "Move one arm to a new position. By default, both arm parts positions(<em>elbow, wrist</em>) starts in <code>em repouso</code>. Each movement must move to the next or previous arm part position, so if the current <code>elbow</code> position is <code>contraído</code>, you're unable to move to <code>em repouso</code> in one request. See <code>schema</code> for details.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "arm": {
                    "type": "string",
                    "description": "Acceptable values: <code>left, right</code>"
                  },
                  "part": {
                    "type": "string",
                    "description": "Acceptable values: <code>elbow, wrist</code>"
                  },
                  "movement": {
                    "type": "string",
                    "description": "Acceptable values: <pre>For <em>elbow</em> values: <code>em repouso, levemente contraído, contraído, fortemente contraído</code></pre><pre>For <em>wrist</em> values: <code>rotação -90°, rotação -45°, em repouso, rotação 45°, rotação 90°, rotação 135°, rotação 180°</code></pre>"
                  }
                }
              },
              "example": {
                "arm": "left",
                "part": "elbow",
                "movement": 2
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Arm moved."
          },
          "400": {
            "description": "Invalid arm movement.",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [{
                    "type": "object",
                    "properties": {
                      "status": {
                        "type": "string"
                      },
                      "message": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "status": "error",
                      "message": "Invalid arm movement."
                    }
                  }, {
                    "type": "object",
                    "properties": {
                      "status": {
                        "type": "string"
                      },
                      "message": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "status": "error",
                      "message": "You can't move the wrist with the current elbow position."
                    }
                  }]
                }
              }
            }
          },
          "500": {
            "description": "Internal server error.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "status": "error",
                    "message": "Internal server error."
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Arms"],
        "summary": "List arms positions.",
        "description": "List arms positions values for each arm part.",
        "responses": {
          "200": {
            "description": "Success.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "left": {
                      "type": "object",
                      "properties": {
                        "elbow": {
                          "type": "string"
                        },
                        "elbow_position": {
                          "type": "number"
                        },
                        "wrist": {
                          "type": "string"
                        },
                        "wrist_position": {
                          "type": "number"
                        }
                      }
                    },
                    "right": {
                      "type": "object",
                      "properties": {
                        "elbow": {
                          "type": "string"
                        },
                        "elbow_position": {
                          "type": "number"
                        },
                        "wrist": {
                          "type": "string"
                        },
                        "wrist_position": {
                          "type": "number"
                        }
                      }
                    }
                  }
                },
                "example": {
                  "left": {
                    "elbow": "Em Repouso",
                    "elbow_position": 1,
                    "wrist": "Em Repouso",
                    "wrist_position": 3
                  },
                  "right": {
                    "elbow": "Em Repouso",
                    "elbow_position": 1,
                    "wrist": "Em Repouso",
                    "wrist_position": 3
                  }
                }
              }
            }
          }
        }
      }
    },
    "/arms/{arm}": {
      "get": {
        "tags": ["Arms"],
        "summary": "List arm positions.",
        "description": "List arm positions values.",
        "parameters": [
          {
            "name": "arm",
            "in": "path",
            "description": "Specify the arm to get the positions.",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["left", "right"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "elbow": {
                      "type": "string"
                    },
                    "elbow_position": {
                      "type": "number"
                    },
                    "wrist": {
                      "type": "string"
                    },
                    "wrist_position": {
                      "type": "number"
                    }
                  }
                },
                "example": {
                  "elbow": "Em Repouso",
                  "elbow_position": 1,
                  "wrist": "Em Repouso",
                  "wrist_position": 3
                }
              }
            }
          }
        }
      }
    }
  }
}